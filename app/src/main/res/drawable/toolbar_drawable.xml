<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo de gradiente -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E53935"
                android:endColor="#FF5252"
                android:angle="90" />
        </shape>
    </item>

    <!-- Línea central blanca (como Pokéball) -->
    <item
        android:top="48dp"
        android:bottom="48dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:height="4dp" />
        </shape>
    </item>

    <!-- Círculo central (opcional) -->
    <item
        android:gravity="center"
        android:width="24dp"
        android:height="24dp"
        android:top="36dp"
        android:bottom="36dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#212121" />
        </shape>
    </item>

</layer-list>